FROM maven:3.9.6-eclipse-temurin-21 AS build
WORKDIR /app
COPY ../.. .
RUN mvn clean package -DskipTests

# Runtime stage
FROM eclipse-temurin:21-jdk-alpine
WORKDIR /app
LABEL image.name="remarket-local:latest"
COPY --from=build /app/target/*.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar", "--spring.profiles.active=docker-postgres"]
